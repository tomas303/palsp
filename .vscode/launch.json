    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "MyTestFunction"
            ],
            "stopOnEntry": true,
            "showLog": true
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": ["-port", "8080"],
            "env": {},
            "buildFlags": "",
            "logOutput": "dap",
            "showLog": false,
            "trace": "error"
        }
    ]
}